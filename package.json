{
	"name": "todo-desktop-app",
	"version": "1.0.0",
	"description": "A simple and elegant todo list desktop application built with Electron and Tailwind CSS",
	"main": "main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"build": "electron-builder",
		"build-win": "electron-builder --win",
		"build-mac": "electron-builder --mac",
		"build-linux": "electron-builder --linux",
		"dist": "electron-builder --publish=never",
		"postinstall": "electron-builder install-app-deps"
	},
	"keywords": [
		"todo",
		"task",
		"productivity",
		"electron",
		"desktop",
		"tailwind"
	],
	"author": "Your Name",
	"license": "MIT",
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.8",
		"electron": "^28.0.0",
		"electron-builder": "^24.0.0",
		"tailwindcss": "^4.1.8"
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0"
	},
	"build": {
		"appId": "com.yourcompany.todoapp",
		"productName": "Todo Desktop App",
		"directories": {
			"output": "dist"
		},
		"files": [
			"main.js",
			"preload.js",
			"renderer.js",
			"index.html",
			"icon.png",
			"!node_modules/electron/**/*"
		],
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "icon.icns"
		},
		"win": {
			"target": "nsis",
			"icon": "icon.ico"
		},
		"linux": {
			"target": "AppImage",
			"icon": "icon.png",
			"category": "Utility"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		}
	}
}
