{
	"name": "todo-list-app",
	"version": "1.0.0",
	"description": "A simple and elegant todo list application built with Electron and Tailwind CSS",
	"main": "src/main.js",
	"scripts": {
		"start": "electron .",
		"dev": "electron . --dev",
		"build": "electron-builder",
		"build-win": "electron-builder --win",
		"build-mac": "electron-builder --mac",
		"build-linux": "electron-builder --linux",
		"dist": "electron-builder --publish=never",
		"tailwind:build": "@tailwindcss/cli -i ./src/styles/global.css -o ./src/output.css",
		"tailwind:watch": "@tailwindcss/cli -i ./src/styles/global.css -o ./src/output.css --watch",
		"postinstall": "electron-builder install-app-deps"
	},
	"keywords": [
		"todo",
		"task",
		"productivity",
		"electron",
		"desktop",
		"tailwind"
	],
	"author": "Your Name",
	"license": "MIT",
	"devDependencies": {
		"@tailwindcss/cli": "^4.1.8",
		"electron": "^28.0.0",
		"electron-builder": "^24.0.0",
		"tailwindcss": "^4.1.8"
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0"
	},
	"build": {
		"appId": "com.yourcompany.todoapp",
		"productName": "Todo List",
		"directories": {
			"output": "dist",
			"buildResources": "build"
		},
		"files": [
			"src/**/*",
			"!src/styles/input.css",
			"node_modules/**/*",
			"package.json"
		],
		"mac": {
			"category": "public.app-category.productivity",
			"icon": "build/icon.icns"
		},
		"win": {
			"target": "nsis",
			"icon": "build/icon.ico"
		},
		"linux": {
			"target": "AppImage",
			"icon": "build/icon.png",
			"category": "Utility"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"installerHeaderIcon": "build/icon.ico"
		}
	}
}